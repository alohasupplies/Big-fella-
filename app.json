{
  "expo": {
    "name": "Big Fella Athletics",
    "slug": "big-fella-athletics",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bigfellaathletics.app",
      "infoPlist": {
        "NSHealthShareUsageDescription": "Big Fella Athletics reads your running workouts from Apple Health to automatically log your runs and maintain your streak.",
        "NSHealthUpdateUsageDescription": "Big Fella Athletics does not write data to Apple Health."
      },
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.access": ["health-records"],
        "com.apple.developer.healthkit.background-delivery": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FF6B35"
      },
      "package": "com.bigfellaathletics.app",
      "permissions": [
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ]
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FF6B35"
        }
      ],
      [
        "@kingstinct/react-native-healthkit",
        {
          "NSHealthShareUsageDescription": "Big Fella Athletics reads your running workouts from Apple Health to automatically log your runs and maintain your streak.",
          "NSHealthUpdateUsageDescription": "Big Fella Athletics does not write data to Apple Health.",
          "background": false
        }
      ]
    ]
  }
}
